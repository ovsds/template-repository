{
  "private": true,
  "name": "{{cookiecutter.project_slug}}",
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2"{% if cookiecutter.with_python == "true" %},
    "pyright": "1.1.389"{% endif %}
  },
  "hooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint"
  },
  "lint-staged": {
    "*.{md,yaml,json,js}": [
      "prettier --check"
    ]
  },
  "scripts": {
    "prepare": "husky"
  }
}
